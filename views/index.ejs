      <h1>Setup</h1>
      
      <h2>Install</h2>
<pre class="code">npm install jellyfish</pre>

      <h2>Basic Usage</h2>
      <h3>Start Client REPL</h3>
<pre class="code">jellyfish shell</pre>

      <h2>Write a Script</h2>
<pre class="code">
var jellyfish = require('jellyfish'),
    , assert = require('assert');

// init a browser (createFirefox, createChrome, createZombie)
var browser = jellyfish.createFirefox();

// goto a web site
browser.go("http://www.jelly.io")

  // verify the title
  .js("document.title", function(o) {
    assert.equal(o.result, "Jelly.io: Jellyfish Home")
  })

  // run some local javascript
  .jsfile("./test.js", function(o) {
    assert.equal(o.result, 
      "alerted: Jellyfish local file loaded successfully!")
  })

  // run some remote javascript, stop the browser, then exit
  .jsurl("http://jelly.io/test.js", function(o) { 
    assert.equal(o.result, 
      "alerted: Jellyfish remote file loaded successfully!")
    browser.stop(function() {
      process.exit();
    })
  });
</pre>
      <h1>Client API</h1>

      <h2>Instantiate - /firefox/chrome/node/</h2>

<pre class="code">
var jellyfish = require('jellyfish'),
    , assert = require('assert');
</pre>

<b>or</b>

<pre class="code">
var browser = jellyfish.createFirefox();
</pre>
      
      <h2>Run Code</h2>

      <h3>Raw Javascript</h3>
<pre class="code">
browser.js("document.title", function(o) {
  assert.equal(o.result, "Jelly.io: Jellyfish Home")
});
</pre>

      <h3>Local Javascript</h3> 
<pre class="code">
browser.jsfile("./test.js", function(o) {
  assert.equal(o.result, "alerted: Jellyfish local file loaded succesfully!")
});
</pre class="code">

      <h3>Remote Javascript</h3>
<pre class="code">
browser.jsurl("http://jelly.io/test.js", function(o) { 
  assert.equal(o.result, "alerted: Successfully ran some remote javascript in Jellyfish!")
});
</pre>

    <h2>User Simulation</h2>

<pre class="code">
browser.user("type", { 
    query:'input[name="q"]', 
    text:'test string'
  }, function(o) {
      assert.equal(o.result, true);
});
browser.user("click", { 
    query:'input[name="btnG"]' 
  }, function(o) {
      assert.equal(o.result, true);
});
</pre>

